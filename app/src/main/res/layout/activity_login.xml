<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    android:padding="20dp"
    tools:context="com.LoginActivity">

    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/spacebold"
        android:layout_marginTop="200dp"/>
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/spacemid"/>
    <EditText
        android:id="@+id/loginEmailEdt"
        android:textColor="@color/DarkBlue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customshape"
        android:drawableStart="@drawable/email"
        android:hint="Enter Your Email"
        android:padding="10dp"
        android:drawablePadding="10dp"
        />
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spacemid"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/loginPasswordEdt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/customshape"
        android:drawableStart="@drawable/password"
        android:hint="Enter your password"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/MidBlue"
        android:text="Log In"
        android:fontFamily="@font/spacebold"
        android:layout_marginTop="20dp"
        android:id="@+id/loginbtn"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do Not Have Any Account?"
            android:fontFamily="@font/spacemid"
            android:textColor="@color/MidBlue"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:fontFamily="@font/spacemid"
            android:textColor="@color/DarkBlue"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/signup11"
            />
    </LinearLayout>


</LinearLayout>